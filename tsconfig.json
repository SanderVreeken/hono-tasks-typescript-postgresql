{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "verbatimModuleSyntax": true,
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "types": ["node"],
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx",
        "paths": { "@/*": ["./src/*"] },
        "outDir": "./dist"
    },
    "tsc-alias": {
        "resolveFullPaths": true
    }
}
